// Imported Stylesheets
@import 'bootstrap.min.css'
@import 'superslides.css'
@import 'customize.styl'
@import 'nib/vendor'

vendor-prefixes = webkit moz o ms official

// Color Variables
black = #000000
blue = #08274b
grisOscuro = #272822
darkerGold = #c88a16
gray = #908f8f
white = #ffffff

.gradiente
	background #fafafa url(../img/gradient.jpg) center bottom repeat-x
	border-bottom 1px solid #d5d5d5
	border-left 1px solid #d5d5d5
	border-right 1px solid #d5d5d5

// Font Variables


// Theme Styles
.Header-top
	position absolute
	top 0
	width 100%
	z-index 100
.Header
	background black
	box-shadow 0 0 8px black
	.MainMenu
		width 100%
		.MainMenu-list
			text-decoration none
			list-style none
			.MainMenu-item
				display inline-block
				margin-left 10px
				padding-top .4em
				a
					color white
					
.SliderNode
	margin 0
	padding 0
	.SliderNode-container
		float right
		position relative
		width 50%
		height 100%
		
		.SliderNode-info
			padding 0 1em
			position absolute
			bottom 50px
			width 80%
			color white
			background rgba(black, .6)
			
.FeaturedNode
	padding-bottom 3em
	.FeaturedNode-scrollButton
		cursor pointer
		position relative
		top -30px
		border-radius 25px 25px 0 0
		background white
		height 30px
		margin 0 auto
		width 50px
		text-align center
		z-index 10
		
	.FeaturedNode-imageContainer
		max-width 300px
		max-height 195px
		overflow hidden
		position relative
		
		.FeaturedNode-image
			width 100%
		.FeaturedNode-description
			font-size 18px
			font-weight bold
			padding 2px 0
			margin 0
			position absolute
			width 100%
			background rgba(white, 0.8)
			text-align center
			text-transform uppercase
			top 85px

.Footer
	margin 0
	padding 2em 0 1em 0 
	background grisOscuro
	text-align center
	color white
		