// Imported Stylesheets
@import 'bootstrap.min.css'
@import 'elastislide.css'
@import 'superslides.css'
@import 'nib/vendor'

vendor-prefixes = webkit moz o ms official

// Color Variables
azul = #4ec2c1
azulClaro = #9ad7d8
blue = #08274b
grisOscuro = #272822
darkerGold = #c88a16
gray = #908f8f
white = #ffffff

.gradiente
	background #fafafa url(../img/gradient.jpg) center bottom repeat-x
	border-bottom 1px solid #d5d5d5
	border-left 1px solid #d5d5d5
	border-right 1px solid #d5d5d5

// Font Variables


// Theme Styles
.noPadd
	padding 0
.Tab
	text-align center
	padding-top 5px
	.Tab-item
		display inline-block
		text-align center
		margin 0 40px
		p
			margin 0
		.rect
			display inline-block
			width 12px
			height 12px
			border 2px solid black
			background transparent
			transition all 0.3s
		.current
			background black
		
.NoMenu
	position absolute
	top 0
	width 100%
	height 100%
	z-index -20
.Header-top
	position absolute
	top 0
	width 100%
	z-index 100
.Header
	background azul
	box-shadow 0 0 6px 4px rgba(black,0.7)
	z-index 3
	position relative
	.Header-logoContainer
		background azulClaro
		max-width 200px
		height 50px
		padding 2px 18px 0 18px
		.Header-logo
			width 100%
	.line
		width 100%
		height 6px
		position absolute
		left 0
		bottom 0
	.MainMenu-list
		text-decoration none
		text-align center
		list-style none
		height 50px
		margin 0
		padding 0
		z-index 4
		.MainMenu-item
			display inline-block
			a
				line-height 50px
				color white
				text-transform uppercase
				text-decoration none
				width 100%
				float left
				padding 0 25px
				&:hover
					color white
			&:last-child
				right 0
				position absolute
				a
					
					text-transform none
					padding 0 2em
					border-left 1px solid rgba(white,0.8)

			.MainMenu-subMenu
				z-index 4
				top 40px
				display none
				padding 0
				position absolute
				text-align center
				li
					border-bottom 1px solid rgba(white, 0.1)
					background grisOscuro
					&:last-child
						border-bottom none
						border-radius 0 0 .4em .4em
	.MainMenu-mobileMenu
		color white
		font-size 18px
		top 0
		float right
		padding 10px
		display none
		text-decoration none
		
					
					
.SliderNode
	margin 0
	padding 0
	.slides-pagination
		display none
		a
			border-radius 0
			background #211915
	.slides-navigation
		.next
		.prev
			text-decoration none
			color rgba(white,0.5)
			font-size 30px
			transition all 0.2s
		.next
			margin-right 5%
			&:hover
				color white
				font-size 35px
		.prev
			margin-left 5%
			&:hover
				color white
				font-size 35px
	.SliderNode-container
		float right
		height 100%
		margin 0 auto
		position relative
		width 50%
		
		.SliderNode-info
			background rgba(black, .6)
			bottom 50px
			color white
			padding 0 1em
			position absolute
			width 80%
			
.FeaturedNode
	padding-bottom 3em

	.FeaturedNode-scrollButton
		cursor pointer
		position relative
		top -30px
		border-radius 25px 25px 0 0
		background white
		height 30px
		margin 0 auto
		width 50px
		text-align center
		z-index 10
		a
			position absolute
			color grisOscuro
			right 0
			left 0
			font-size 20px
			top 5px
			text-decoration none
		
	.FeaturedNode-imageContainer
		max-width 300px
		min-width auto
		height 195px
		overflow hidden
		position relative
		margin 0 auto
		.FeaturedNode-image
			width 100%
			transition all 0.3s
		.FeaturedNode-description
			font-size 18px
			font-weight bold
			padding 2px 0
			margin 0
			position absolute
			width 100%
			background rgba(white, 0.8)
			text-align center
			text-transform uppercase
			top 85px
.BarUp
	width 100%
	padding .4em
	border-top 1px solid rgba(black, 0.3)
	a
		margin-left 2em
		color black
		text-decoration none
		font-size 16px
		text-transform uppercase
	.inicioUp
		float right
		margin-right 5px

.Footer
	background azul
	color white
	margin 0
	padding 1em 1em 2em 1em
	overflow hidden
	
	.Footer-copyright
		margin-left 1em
		display inline-block
	.Footer-nav
		color white
		display inline-block
		float right
		text-align right
		list-style none
		li
			a
				color white
				text-transform uppercase
		

/* Styles for Collection */
.Product
	position relative
	border-bottom 1px solid rgba(black,0.4)
	.Product-tittle
		padding 0
		position absolute
		top 50%
		transform translateY(-50%)
		.Product-name
			text-decoration none
			text-transform uppercase
			font-size 18px
			text-align center
			margin 0
	.CaurouselContainer
		float right
		.elastislide-horizontal
			padding 15px 80px 15px 15px
		.elastislide-wrapper 
			background none
			box-shadow none
			nav
				span
					background none
					border none
					border-radius none
					text-indent initial
					color black
					font-size 25px
				.elastislide-prev
					left initial
					right 35px
				.elastislide-prev:before
					content "\e079"
					font-family 'Glyphicons Halflings'
				.elastislide-next:before
					content "\e080"
					font-family 'Glyphicons Halflings'
/*Styles for Products*/
.SecondMenu
	background rgba(#3498DB,0.8)
	float left
	line-height 100%
	position relative
	width 100%
	z-index 2
	.SecondMenu-list
		margin 0
		padding 0
		text-align center
		float left
		width 100%
		
		.SecondMenu-item
			width 20%
			display inline-block
			a
				line-height 30px
				float left
				width 100%
				text-decoration none
				text-align center
				color white
.sec
	figure
		max-width 100%
		img
			width 100%
/*Materials & Process*/
.Pages
	width 100%
	text-align center
	.Pages-materials
		max-width 19.5%
		max-height 100%
		display inline-block
		position relative
		overflow hidden

		.Pages-hover
			position absolute
			top 0
			left 0
			opacity 0
			transition all 0.3s
		.Page-materialsInfo
			background -moz-linear-gradient(top,  rgba(0,0,0,0.95) 0%, rgba(0,0,0,0) 100%)
			background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0.95)), color-stop(100%,rgba(0,0,0,0)))
			background -webkit-linear-gradient(top,  rgba(0,0,0,0.95) 0%,rgba(0,0,0,0) 100%)
			background linear-gradient(top,  rgba(0,0,0,0.95) 0%,rgba(0,0,0,0) 100%)
			position absolute
			top 0
			text-align center
			width 100%
			color white
			text-transform uppercase
			transition all 0.3s
			h3
				margin 0
				margin-top 30px
				font-size 28px
				font-weight bold
				transition all 0.3s
			p
				margin-top -5px
				font-size 12px
				transition all 0.3s
			.ulContainer
				opacity 0
				text-transform none
				margin-top -40px
				display inline-block
				transition all 0.6s
				ul
					text-align left
					padding 0
		&:hover
			.Pages-hover
				opacity 1
			.Page-materialsInfo
				h3
					font-size 12px
				p
					font-size 28px
					font-weight bold
				.ulContainer
					margin-top 0
					opacity 1
			
@media (max-width: 992px)
	.Header
		.MainMenu-list
			display block
	.FeaturedNode
		.FeaturedNode-imageContainer
			max-width 100%
			margin 0 auto
			margin-bottom 1.2em
			.FeaturedNode-image
				transform scale(1,1.3)
			
	.SliderNode
		.SliderNode-container
			width 80%

@media (min-width: 769px)
	.Header
		.MainMenu-list
			display block !important
	
@media (max-width: 768px)
	.Header
		height 50px
		.MainMenu-mobileMenu
			display block
		.MainMenu-list
			display none
			padding 0
			margin 0
			background grisOscuro
			position absolute
			top 45px
			width 180px
			right 0
			.MainMenu-item
				width 100%
				border-bottom 1px solid rgba(white, 0.1)
				text-align center
				z-index auto
				overflow hidden
				&:last-child
					right none
					position static
					a
						padding 15px 50px
						border-left none
				a
					border-bottom 1px solid rgba(white, 0.1)
					&:last-child
						border none
				&:hover > .MainMenu-subMenu
					display none
				.MainMenu-subMenu
					background black
					padding 0
					z-index auto
					position relative
					li
						background none
					a
						font-size 12px
						border-bottom none
						
	.FeaturedNode
		.FeaturedNode-imageContainer
			max-width 100%
			margin-bottom 1.2em
			.FeaturedNode-image
				transform scale(1,1.5)
	.SliderNode
		.SliderNode-container
			width 100%
	.Footer
		padding 1em
		.Footer-copyright
			margin 0
			margin-top 1.5em
			text-align center
			display block
		.Footer-nav
			display block
			float none
	/*Style for Collection*/
	.Product
		position static
		.Product-tittle
			position static
			transform none
			margin-top 10px
		.CaurouselContainer
			float none
	/*Materials & Process*/
	.Pages
		.Pages-materials
			max-width 100%
