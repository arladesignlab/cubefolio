// Imported Stylesheets
@import 'bootstrap.min.css'
@import 'elastislide.css'
@import 'superslides.css'
@import 'customize.styl'
@import 'nib/vendor'

vendor-prefixes = webkit moz o ms official

// Color Variables
black = #000000
blue = #08274b
grisOscuro = #272822
darkerGold = #c88a16
gray = #908f8f
white = #ffffff

.gradiente
	background #fafafa url(../img/gradient.jpg) center bottom repeat-x
	border-bottom 1px solid #d5d5d5
	border-left 1px solid #d5d5d5
	border-right 1px solid #d5d5d5

// Font Variables


// Theme Styles
.NoMenu
	position absolute
	top 0
	width 100%
	height 100%
	z-index -20
.Header-top
	position absolute
	top 0
	width 100%
	z-index 100
.Header
	background black
	box-shadow 0 0 6px 4px rgba(black,0.7)
	z-index 3
	.MainMenu-list
		text-decoration none
		list-style none
		margin 0
		z-index 4
		.MainMenu-item
			display inline-block
			line-height 40px
			
			
			a
				line-height 5px
				color rgba(white, 0.65)
				text-transform uppercase
				text-decoration none
				width 100%
				padding 15px 50px
				&:hover
					color white
			&:last-child
				right 0
				position absolute
				a
					padding 0 15px
					border-left 1px solid white

			.MainMenu-subMenu
				z-index 4
				top 40px
				display none
				padding 0
				position absolute
				text-align center
				li
					border-bottom 1px solid rgba(white, 0.1)
					background grisOscuro
					&:last-child
						border-bottom none
						border-radius 0 0 .4em .4em
	.MainMenu-mobileMenu
		color white
		font-size 18px
		top 0
		float right
		padding 10px 0 10px 10px
		display none
		text-decoration none
		
					
					
.SliderNode
	margin 0
	padding 0
	.slides-navigation
		.next
		.prev
			text-decoration none
			color rgba(white,0.5)
			font-size 30px
			transition all 0.2s
		.next
			margin-right 5px
			&:hover
				color white
				font-size 35px
		.prev
			margin-left 5px
			&:hover
				color white
				font-size 35px
	.SliderNode-container
		float right
		height 100%
		margin 0 auto
		position relative
		width 50%
		
		.SliderNode-info
			background rgba(black, .6)
			bottom 50px
			color white
			padding 0 1em
			position absolute
			width 80%
			
.FeaturedNode
	padding-bottom 3em

	.FeaturedNode-scrollButton
		cursor pointer
		position relative
		top -30px
		border-radius 25px 25px 0 0
		background white
		height 30px
		margin 0 auto
		width 50px
		text-align center
		z-index 10
		a
			position absolute
			color grisOscuro
			right 0
			left 0
			font-size 20px
			top 5px
			text-decoration none
		
	.FeaturedNode-imageContainer
		max-width 300px
		min-width auto
		height 195px
		overflow hidden
		position relative
		margin 0 auto
		.FeaturedNode-image
			width 100%
			transition all 0.3s
		.FeaturedNode-description
			font-size 18px
			font-weight bold
			padding 2px 0
			margin 0
			position absolute
			width 100%
			background rgba(white, 0.8)
			text-align center
			text-transform uppercase
			top 85px

.Footer
	background grisOscuro
	color white
	margin 0
	padding 2em 0 1em 0 
	text-align center

/* Styles for Collection */
.Product
	position relative
	border-bottom 1px solid rgba(black,0.4)
	.Product-tittle
		padding 0
		position absolute
		top 50%
		transform translateY(-50%)
		.Product-name
			text-decoration none
			text-transform uppercase
			font-size 18px
			text-align center
			margin 0
	.CaurouselContainer
		float right
		.elastislide-horizontal
			padding 15px 80px 15px 15px
		.elastislide-wrapper 
			background none
			box-shadow none
			nav
				span
					background none
					border none
					border-radius none
					text-indent initial
					color black
					font-size 25px
				.elastislide-prev
					left initial
					right 35px
				.elastislide-prev:before
					content "\e079"
					font-family 'Glyphicons Halflings'
				.elastislide-next:before
					content "\e080"
					font-family 'Glyphicons Halflings'
/*Styles for Products*/
.SecondMenu
	position relative
	z-index 2
	background #3498DB
	line-height 100%
	float left
	width 100%
	.SecondMenu-list
		margin 0
		padding 0
		text-align center
		float left
		width 100%
		
		.SecondMenu-item
			width 20%
			display inline-block
			a
				line-height 30px
				float left
				width 100%
				text-decoration none
				text-align center
				color white
.sec
	figure
		max-width 100%
		img
			width 100%
@media (max-width: 992px)
	.Header
		.MainMenu-list
			display block
	.FeaturedNode
		.FeaturedNode-imageContainer
			max-width 100%
			margin 0 auto
			margin-bottom 1.2em
			.FeaturedNode-image
				transform scale(1,1.3)
			
	.SliderNode
		.SliderNode-container
			width 80%

@media (min-width: 769px)
	.Header
		.MainMenu-list
			display block !important
	
@media (max-width: 768px)
	.Header
		height 45px
		.MainMenu-mobileMenu
			display block
		.MainMenu-list
			display none
			padding 0
			margin 0
			background grisOscuro
			position absolute
			top 45px
			width 180px
			right 0
			.MainMenu-item
				width 100%
				border-bottom 1px solid rgba(white, 0.1)
				text-align center
				z-index auto
				overflow hidden
				&:last-child
					right none
					position static
					a
						padding 15px 50px
						border-left none
				a
					border-bottom 1px solid rgba(white, 0.1)
					&:last-child
						border none
				&:hover > .MainMenu-subMenu
					display none
				.MainMenu-subMenu
					background black
					padding 0
					z-index auto
					position relative
					li
						background none
					a
						font-size 12px
						border-bottom none
						
	.FeaturedNode
		.FeaturedNode-imageContainer
			max-width 100%
			margin-bottom 1.2em
			.FeaturedNode-image
				transform scale(1,1.5)
	.SliderNode
		.SliderNode-container
			width 100%
	/*Style for Collection*/
	.Product
		position static
		.Product-tittle
			position static
			transform none
			margin-top 10px
		.CaurouselContainer
			float none

